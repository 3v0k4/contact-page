---
import type { Tip, PageLink } from "../page";
import hljs from "highlight.js";

interface Props extends Tip {
  pageLinksByIndex: PageLink[];
}
const {
  title,
  description,
  previousTipPath,
  nextTipPath,
  badCode,
  goodCode,
  pageLinksByIndex,
  twitterHandle,
} = Astro.props;

const badCodeHighlighted = hljs.highlight(badCode || "", {
  language: "typescript",
}).value;

const goodCodeHighlighted = hljs.highlight(goodCode || "", {
  language: "typescript",
}).value;

const twitterUrl = `https://twitter.com/${twitterHandle}`;
---

<div
  data-page-links-by-index={pageLinksByIndex
    .map(({ canonical }) => canonical)
    .join(",")}
  id="pageLinksByIndex"
>
</div>

