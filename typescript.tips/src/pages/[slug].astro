---
import Layout from '../layouts/Layout.astro';
import TipComponent from '../components/Tip.astro';
import { readTips } from '../readTips';
import type { Tip } from '../readTips';

export async function getStaticPaths() {
  return readTips()
    .map(tip => ({
      params: { slug: tip.slug },
      props: tip,
    }));
}

interface Props extends Tip {}

const { title, description, canonical } = Astro.props;
---

<Layout title={`${title} | TypeScript Tips`} description={description} canonical={canonical}>
  <TipComponent {...Astro.props} />
</Layout>
