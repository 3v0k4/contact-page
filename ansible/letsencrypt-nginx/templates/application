server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  root /usr/share/nginx/html/{{ domain }};
  error_page 404 /404.html;
  server_name {{ domain }};

  {% for redirect in redirects %}
  rewrite ^{{ redirect.from }}(.*)$ {{ redirect.to }} redirect;
  {% endfor %}

  location ~ ^/.+\.pdf$ {
    expires -1;
  }

  include snippets/ssl-params-for-{{ domain }};
}
